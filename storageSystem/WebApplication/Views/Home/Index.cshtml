@model IEnumerable<storageSystem.Models.ProductList>

@{
    ViewBag.Title = "Lista Produktów";
}

<h2>Index</h2>

<table class="table">
    <tr>
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <td>
                Filtruj produkt poprzez nazwe: @Html.TextBox("filterName", ViewBag.FilterName as string)
            </td>
            <td>
                Filtruj produkt poprzez kod: @Html.TextBox("filterCode", ViewBag.FilterCode as string)
            </td>
            <td>
                <input type="submit" value="Filtruj" />
            </td>
        }
    </tr>
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.guaranteeDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.guaranteeDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            @*@Html.ActionLink("Zamów", "addOrder", new { name=item.name, code=item.code })*@
        </td>
    </tr>
}

</table>
